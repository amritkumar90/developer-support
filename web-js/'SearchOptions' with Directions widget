 +      ], function(
 +        urlUtils, arcgisUtils, Map, FeatureLayer, Directions, 
 +        parser
 +      ) {
 +        parser.parse();
 +        
 +        /*
 +        urlUtils.addProxyRule({
 +          urlPrefix: "route.arcgis.com",
 +          proxyUrl: "DotNet/proxy.ashx"
