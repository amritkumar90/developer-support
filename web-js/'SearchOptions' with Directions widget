 +          proxyUrl: "resource-proxy-master/DotNet/proxy.ashx"
 +        });*/
 +        
 +        
 +        var map = new Map("map", {
 +          basemap: "streets",
 +          center:[-98.56,39.82],
 +          zoom: 4
 +        });
 +		
 +		//plain webmap with no layers loaded: 68dbf366c40940caa7dc7693b5a8ccf9
 +		//webmap with feature layers loaded: f032f159db9c4e7a931812768ec5e6a6
